---
interface Props {
	items: { link: string; text: string, arialabel: string }[];
}

const { items } = Astro.props;
---

<nav
	class="my-6 mx-auto px-4 w-fit rounded-full ring-1 ring-slate-700 bg-slate-800 sm:w-auto"
>
	<ul class="flex items-center justify-center">
		{
			items.map(item =>
					<li>
						<a
							class="font-semibold text-lg tracking-wide block py-2 px-4 text-slate-200 hover:bg-slate-700"
							href={item.link}
							aria-label={item.arialabel}
						>
							{item.text}
						</a>
					</li>
				)
		}
	</ul>
</nav>
