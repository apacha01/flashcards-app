{
	"root": true,
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:astro/recommended"
	],
	"ignorePatterns": [
		"dist",
		".eslintrc.json",
		"node_modules"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"semi": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"single"
		],
		"no-trailing-spaces": "error",
		"no-unused-vars": "warn"
	}
}